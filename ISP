# ens18 - internet
# ens19 - HQ-RTR
# ens20 - BR-RTR

hostnamectl set-hostname ISP
vim /etc/sysconfig/network
    hostname=ISP
exec bash

timedatactl set-timezone Europe/Moscow

cd /etc/net/ifaces
mkdir ens{19,20}

vim ens19/options
    TYPE=eth
    BOOTPROTO=static
    DISABLE=no
    CONFIG_IPV4=yes

cp ens19/options ens20/options

vim ens19/ipv4address
    172.16.4.1/28
vim ens20/ipv4address
    172.16.5.1/28

vim /etc/net/sysctl.conf
    net.ipv4.ip_forward = 0 --> net.ipv4.ip_forward = 1

apt-get update && apt-get install iptables -y

# Очистка правил iptables
# iptables -X
# iptables -F
# iptables -t nat -X
# iptables -t nat F

iptables iptables -t nat -A POSTROUTING -s 172.16.4.2 -o ens18 -j MASQUERADE
iptables iptables -t nat -A POSTROUTING -s 172.16.5.2 -o ens18 -j MASQUERADE
iptables-save>/etc/sysconfig/iptables

systemctl restart network
systemctl enable --now iptables
