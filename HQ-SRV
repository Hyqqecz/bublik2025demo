# vim /etc/sysconfig/network
#    username=hq-srv.au-team.irpo

hostnamectl set-hostname hq-srv.au-team.irpo
exec bash

timedatactl set-timezone Europe/Moscow

vim /etc/net/ifaces/ens18/options
    TYPE=eth
    BOOTPROTO=static
    DISABLE=no
    CONFIG_IPV4=yes

vim /etc/net/ifaces/ens18/ipv4address
    192.168.1.2/26
vim /etc/net/ifaces/ens18/ipv4route
    default via 192.168.1.1

systemctl restart network

useradd -u 1010 sshuser
passwd sshuser
    P@ssword
usermod -aG wheel sshuser

vim /etc/sudoers
    sshuser ALL=(ALL) NOPASSWD:ALL

vim /etc/net/openssh/sshd_config
# Приводим эти строки к такому виду
    Port 2024
    MaxAuthTries 2
    PasswordAuthentication yes
    # По идее анологично можно вместо AllowUsers    sshuser найти параметр с AllowGroups или типа такого и разрешить группу wheel
    AllowUsers  sshuser
    Banner /etc/openssh/bannermotd

vim /etc/openssh/bannermotd
    Authorized access only

systemctl enable --now sshd

apt-get update && apt-get install bind bind-utils -y

vim /etc/bind/options.conf
# Приводим эти строки к такому виду
    listen-on {192.168.1.2;};
    listen-on-v6 {none;};
    forwarder {77.88.8.8;};
    allow-query {192.168.1.0/26; 192.168.1.64/28; 192.168.2.0/27;};
        # по идее можно сократить и не писать ip адреса
        # listen-on {any;}; - по идее так можно
        # allow-query {any;}; - тут точно так можно, я проверял

vim /var/lib/bind/etc/local.conf
    # Добавляем
    zone "au-team.irpo" {
        type master 
        file "au-team.irpo";
    };
    zone "1.168.192.in-addr.arpa" {
        type master 
        file "1.168.192.in-addr.arpa";
    };

cd /etc/bind/zone

# там есть какие то конфигурации или примеры конфигураций, че нить годное копируем и редактируем
cp localhost au-team.irpo
cp localhost 1.168.192.in-addr.arpa

vim au-team.irpo
    $TTL    1D
    @       IN      SOA     au-team.irpo. root.au-team.irpo. (
                                    2025102200      ; serial
                                    12H             ; refresh
                                    1H              ; retry
                                    1W              ; expire
                                    1H              ; ncache
                            )
            IN      NS      au-team.irpo.
            IN      A       192.168.1.2
    hq-rtr  IN      A       192.168.1.1
    hq-rtr  IN      A       192.168.1.65
    br-rtr  IN      A       192.168.2.1
    hq-srv  IN      A       192.168.1.2
    hq-cli  IN      A       192.168.1.66
    br-srv  IN      A       192.168.2.2
    moodle  IN      CNAME   hq-rtr.au-team.irpo.
    wiki    IN      CNAME   hq-rtr.au-team.irpo.

vim 1.168.192.in-addr.arpa
    $TTL    1D
    @       IN      SOA     au-team.irpo. root.au-team.irpo. (
                                    2025102201      ; serial
                                    12H             ; refresh
                                    1H              ; retry
                                    1W              ; expire
                                    1H              ; ncache
                            )
            IN      NS      au-team.irpo.
    1       IN      PTR     hq-rtr.au-team.irpo.
    65      IN      PTR     hq-rtr.au-team.irpo.
    1       IN      PTR     hq-rtr.au-team.irpo.
    2       IN      PTR     hq-srv.au-team.irpo.
    66      IN      PTR     hq-cli.au-team.irpo.

# Вася сказал это не обязательно
