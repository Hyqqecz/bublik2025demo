# sed -i ‘6,$d’ /var/lib/bind/etc/rndc.key
# данная команда удаляет всё из файла начиная с 6 строки

# проверка корректности конфигураций
# named-checkconf
# named-checkconf -z

systemctl enable --now bind.service

